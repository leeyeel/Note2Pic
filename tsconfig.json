{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "esModuleInterop": false,
    "types": ["node", "canvas"]
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules", "dist"]
}

